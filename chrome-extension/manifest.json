{
  "manifest_version": 2,
  "name": "Muse Git Review",
  "description": "Approve Git Pull Requests - with your mind!",
  "version": "1",
  "author": "Dominic Kendrick",
  "browser_action": {
    "default_icon": "tab-icon.png",
    "default_title": "Git Mind Control"
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
   {
     "matches": ["https://github.com/*"],
     "js": ["app.bundle.js"],
     "css": ["style.css"]
   }
 ]
}